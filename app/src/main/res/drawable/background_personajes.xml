<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Capa de fondo con el borde exterior -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#543847" />
        </shape>
    </item>

    <!-- Capa superior con el borde interior y fondo -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#DED894" />
            <stroke
                android:width="5dp"
                android:color="#C7C286" />
        </shape>
    </item>

</layer-list>
